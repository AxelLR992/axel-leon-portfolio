---
import logo from "../assets/images/logo.svg";

interface Props {
  activePage: "home" | "blog";
}

const { activePage } = Astro.props;
---

<nav>
  <img src={logo} alt="Logo" />

  <ul>
    <li class={activePage === "home" ? "active" : ""}>
      <a href="/">Home</a>
    </li>
    <li class={activePage === "blog" ? "active" : ""}>
      <a href="/blog">Blog</a>
    </li>
  </ul>
</nav>

<style lang="scss">
  nav {
    display: flex;
    align-items: center;
    background-color: #343353;
    justify-content: space-between;
    padding: 1rem 2rem;
    position: fixed;
    width: 100%;
    border-bottom: 1px solid rgba(144, 144, 144, 0.5);
    z-index: 1;
    top: 0;

    img {
      width: 8rem;
    }

    ul {
      display: flex;
      align-items: center;
      list-style: none;
      margin: 0;
      padding: 0;

      li {
        margin-left: 1rem;

        a {
          display: block;
          padding: 0.5rem 1rem;
          color: white;
          text-decoration: none;
          transition: all 0.2s ease-in-out;
          font-weight: 600;

          &:hover {
            color: #f8d74c;
          }
        }

        &.active {
          a {
            color: #f8d74c;
          }
        }
      }
    }

    // On bigger screens, increment left and right padding
    @media (min-width: 768px) {
      padding: 1rem 6rem;
    }
  }
</style>
