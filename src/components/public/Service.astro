---
interface Props {
  icon: string;
  title: string;
  description: string;
  bgColor?: string;
  color?: string;
}

const {
  icon,
  title,
  description,
  bgColor = "#6c6ce5",
  color = "white",
} = Astro.props;
---

<div>
  <i class={`bi ${icon}`}></i>
  <h5>{title}</h5>
  <p>{description}</p>
</div>

<style lang="scss" define:vars={{ bgColor, color }}>
  div {
    background-color: var(--bgColor);
    padding: 1rem;
    color: var(--color);
    text-align: center;
    border-radius: 1rem;
    box-shadow: 0px 5px 20px 0px rgb(108 108 229 / 50%);
    margin: 0 2rem;
    transition: all 0.3s ease-in-out;

    i {
      font-size: 4rem;
    }

    p {
      font-size: 1.2rem;
    }

    &:hover {
      transform: translateY(-15px);
    }
  }
</style>
